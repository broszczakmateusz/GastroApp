@model GastroApp.Models.OrderedMeal

@{
    ViewData["Title"] = "Remove ordered meal from order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this meal from order?</h3>
<div>
    <h4>Meal</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Meal.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Meal.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Annotation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Annotation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Meal.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Meal.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Meal.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Meal.Category.Name)
        </dd>
    </dl>
    
    <form asp-action="RemoveOrderedMealFromOrder">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="SelectedOrder" asp-route-id="@Model?.OrderId">Back to order</a>
    </form>
</div>
