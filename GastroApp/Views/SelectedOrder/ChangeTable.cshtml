@model GastroApp.Models.Order

@{
    ViewData["Title"] = "Change table";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4> Change table </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeTable">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                Select new table
                <select asp-for="TableId" class="form-control" asp-items="ViewBag.TableId"></select>
                <span asp-validation-for="TableId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="SelectedOrder" asp-route-id="@Model?.Id">Back to order</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
