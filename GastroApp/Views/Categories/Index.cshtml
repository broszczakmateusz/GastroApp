@model IEnumerable<GastroApp.Models.Category>

@{
    ViewData["Title"] = "Select category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Select category</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Category
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    <a asp-action="Select" asp-route-id="@item.Id" asp-route-orderId="@ViewData["OrderId"]">Select</a>
            </td>
        </tr>
}
    </tbody>
</table>
