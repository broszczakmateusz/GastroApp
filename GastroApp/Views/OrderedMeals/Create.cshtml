@model GastroApp.Models.OrderedMeal

@{
    ViewData["Title"] = "Add annotation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Add annotation to @Model.Meal.Name</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="MealId" />
            <input type="hidden" asp-for="OrderId" />

            <div class="form-group">
                <label asp-for="Annotation" class="control-label"></label>
                <input asp-for="Annotation" class="form-control" />
                <span asp-validation-for="Annotation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

