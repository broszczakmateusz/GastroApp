@model GastroApp.Models.Table

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Details</h3>

<div>
    <h4>
        @Html.DisplayFor(model => model.Name)
        @Html.DisplayFor(model => model.Room.Name)
    </h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Number of seats
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberOfSeats)
        </dd>
        <dt class = "col-sm-2">
            Is taken?
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsTaken)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to tables</a>
</div>
