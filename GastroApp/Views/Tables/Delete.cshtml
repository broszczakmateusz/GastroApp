@model GastroApp.Models.Table

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Delete</h3>

<h3>Are you sure you want to delete this table?</h3>
<div>
    <h4>
        @Html.DisplayFor(model => model.Room.Name) @Html.DisplayFor(model => model.Name)
    </h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Number of seats
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberOfSeats)
        </dd>
        <dt class = "col-sm-2">
           Is taken?
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsTaken)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to tables</a>
    </form>
</div>
